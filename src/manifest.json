{
  "name": "HaxPIP",
  "description": "Watch video using Picture-in-Picture Extension (by Google)",
  "version": "1.13",
  "icons": {
    "128": "assets/icon-coloured.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "19": "assets/icon-coloured.png",
      "38": "assets/icon-coloured.png"
    }
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "windows": "Alt+P",
        "mac": "Alt+P",
        "chromeos": "Alt+P",
        "linux": "Alt+P"
      }
    }
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "permissions": [
    "scripting",
    "storage",
    "nativeMessaging"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "manifest_version": 3
}
